{
  "categories": [
    {
      "title": "## 🚀 Features",
      "labels": ["feature"]
    },
    {
      "title": "## 🐛 Fixes",
      "labels": ["fix"]
    },
    {
      "title": "## 📚 Documentation",
      "labels": ["doc"]
    }
  ],
  "template": "${{CHANGELOG}}\n\n## Under the hood\n\n${{UNCATEGORIZED}}",
  "pr_template": "- [${{MERGE_SHA}}](${{TITLE}})",
  "empty_template": "- no changes",
  "label_extractor": [
    {
      "pattern": "(.): (.+)",
      "target": "$1"
    }
  ]
}